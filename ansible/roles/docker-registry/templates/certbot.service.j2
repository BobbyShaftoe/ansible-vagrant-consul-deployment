[Unit]
Description=certbot service
After=docker-compose.service


[Service]
#Type=oneshot
TimeoutStartSec=0
TimeoutStopSec=30
StandardOutput=syslog+console
WorkingDirectory=/usr/local/sbin
#ExecStartPre=
ExecStart=/usr/local/sbin/get-ssl-certificates.sh
ExecStop=killall -HUP get-ssl-certificates.sh
User=root
NotifyAccess=all

[Install]
WantedBy=multi-user.target
